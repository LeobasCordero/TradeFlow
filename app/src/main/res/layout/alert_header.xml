<?xml version="1.0" encoding="utf-8"?>
<GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/encabezadogris"
    android:columnCount="3"
    android:orientation="horizontal"
    >


        <TextView
            android:id="@+id/legend_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alert_header"
            android:textColor="@color/colorLegends"
            android:layout_span="2"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:textAlignment="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/legend_alert"
        android:src="@drawable/logoblanco"
        android:gravity="center_vertical"
        />

</GridLayout >